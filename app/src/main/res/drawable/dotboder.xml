<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-6dp"
        android:right="-6dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#605E5E"
                android:dashGap="1dp"
                android:dashWidth="1dp"
                />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>

    </item>
</layer-list>